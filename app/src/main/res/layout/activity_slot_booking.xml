<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:clickable="true"
    android:fillViewport="true">

    <android.support.v7.widget.Toolbar
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/toolbar"
        android:background="@color/colorPrimaryDark"
        app:title="  Pre Alert "
        app:titleTextColor="@color/white"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="55dp"
        android:padding="5dp"
        android:scrollbarSize="5dp"
        android:scrollbarThumbVertical="@drawable/scrollbar">

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:orientation="vertical">

            <android.support.design.widget.TextInputLayout
                android:id="@+id/input_layout_location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorHint="#0000ff"
                app:errorEnabled="true"
                app:hintTextAppearance="@style/TextLabel"
                style="@style/materialindent">

                <android.support.v7.widget.AppCompatEditText
                    android:id="@+id/input_location"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:focusable="false"
                    android:hint="Location*"
                    android:textColor="@color/colorPrimaryDark" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/input_layout_customer_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorHint="#0000ff"
                app:errorEnabled="true"
                app:hintTextAppearance="@style/TextLabel"
                style="@style/materialindent">

                <EditText
                    android:id="@+id/input_customer_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#1f0036"
                    android:focusable="false"
                    android:hint="Customer Name*"
                    />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/input_layout_slot_no"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorHint="#808080"
                app:errorEnabled="true"
                app:hintTextAppearance="@style/TextLabel"
                style="@style/materialindent">

                <EditText
                    android:id="@+id/input_slot_no"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#808080"
                    android:focusable="false"
                    android:hint="Slot Number"
                    />
            </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/input_layout_transaction_type"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColorHint="#0000ff"
                    app:errorEnabled="true"
                    app:hintTextAppearance="@style/TextLabel"
                    style="@style/materialindent">

                    <EditText
                        android:id="@+id/input_transaction_type"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="#1f0036"
                        android:focusable="false"
                        android:hint="Transaction Type*"
                        />
                </android.support.design.widget.TextInputLayout>


            <android.support.design.widget.TextInputLayout
                android:id="@+id/input_layout_packaging_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorHint="#0000ff"
                app:errorEnabled="true"
                app:hintTextAppearance="@style/TextLabel"
                style="@style/materialindent">

                <EditText
                    android:id="@+id/input_packaging_type"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#1f0036"
                    android:focusable="false"
                    android:hint="Bag Type*"
                    />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/input_layout_scheduled_from_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorHint="#0000ff"
                app:errorEnabled="true"
                app:hintTextAppearance="@style/TextLabel"
                style="@style/materialindent">

                <EditText
                    android:id="@+id/input_scheduled_from_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#1f0036"
                    android:focusable="false"
                    android:hint="Scheduled From Time*"
                    />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/input_layout_rescheduled_from_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorHint="#0000ff"
                app:errorEnabled="true"
                app:hintTextAppearance="@style/TextLabel"
                style="@style/materialindent">

                <EditText
                    android:id="@+id/input_rescheduled_from_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#1f0036"
                    android:focusable="false"
                    android:hint="Re-Scheduled From Time*"
                    />
            </android.support.design.widget.TextInputLayout>

            <Button android:id="@+id/save"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:text="Save"
                android:layout_marginTop="20dp"
                android:textAllCaps="false"
                android:background="@drawable/ripple"
                android:layout_margin="20dp"
                android:textColor="@color/white"
                android:layout_gravity="center"
                />

        </LinearLayout>

    </ScrollView>
</RelativeLayout>